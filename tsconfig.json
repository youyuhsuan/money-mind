{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/style/NavItem.styled.jsx",
    "src/app/components/style/Nav.styled.tsx",
    "src/app/components/style/Container.styled.jsx",
    "src/app/components/style/Button.styled.js"
  ],
  "exclude": ["node_modules"],
  "resolutions": {
    "styled-components": "^5"
  }
}
